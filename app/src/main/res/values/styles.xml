<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Welcome & Login Theme. -->
    <style name="WelcomeLoginTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWelcome</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWelcome</item>
        <item name="colorAccent">@color/colorAccentWelcome</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#016Ef1</item>
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">#ccc</item>
    </style>
</resources>
